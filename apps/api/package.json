{
  "name": "@saas/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run wait-for-postgres && pnpm db:migrate && pnpm env:load tsx watch ./src/http/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "env:load": "dotenv -e ../../.env --",
    "build": "tsup",
    "start": "node dist/http/server.js",
    "test": "pnpm env:load prisma migrate dev && pnpm env:load vitest run",
    "test:dev": "pnpm env:load vitest run",
    "test:watch": "pnpm env:load vitest",
    "wait-for-postgres": "node src/infra/scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/one-line-logger": "^2.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^3.1.0",
    "@prisma/client": "^6.1.0",
    "async-retry": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "pg": "^8.13.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@saas/env": "workspace:*",
    "@saas/eslint-config": "workspace:*",
    "@saas/prettier": "workspace:*",
    "@saas/tsconfig": "workspace:*",
    "@types/async-retry": "^1.4.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.9",
    "concurrently": "^9.1.0",
    "dotenv-cli": "^7.4.1",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "tsx": "^4.7.2",
    "vite-plugin-tsconfig-paths": "^1.4.1",
    "vitest": "^2.1.8"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@saas/prettier",
  "eslintConfig": {
    "extends": [
      "@saas/eslint-config/node"
    ]
  }
}
