{
  "name": "reposhift",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm run services:up && turbo dev",
    "lint": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "pnpm run services:up && turbo test",
    "services:up": "node ./scripts/docker/up-docker.js",
    "services:stop": "node ./scripts/docker/stop-docker.js",
    "services:down": "node ./scripts/docker/down-docker.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "turbo": "2.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
    "config": {
      "commitizen": {
        "path": "./node_modules/cz-conventional-changelog"
      }
    }
  
  
}
